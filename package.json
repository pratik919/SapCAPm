{
    "name": "CapMProj",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6.4.0",
        "express": "^4.18.2",
        "hdb": "^0.19.5"
    },
    "scripts": {
        "start": "cds run"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "build": {
        "tasks": [
            {
            "for": "hana",
            "dest": "../db"
            },
            {
            "for": "node-cf"
            }
        ]
        },
        "requires": {
        "db": {
            "kind": "hana-cloud"
        }
        }
    }
}
